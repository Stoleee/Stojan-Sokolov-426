{% extends 'layout.twig' %}
{% block title %}
	Comments  
{% endblock %}
{% block content %}
	<div class="container">
        <div class="row">
            <h1 class="text-center w-100" style="margin-top:2rem;color:white;"> Comments for : {{movie.title}}</h1>
        </div>
        
			<div class="row justify-content-center" style="margin-top:5rem;">
				<div class="col-sm-12">
					<div class="card text-white bg-dark">
						<div class="card-header h3">{{movie.title}} </div>
						<div class="card-body d-flex">
							<img class="w-25" src="Images/{{movie.picture}}">
							<div class="w-75">
								<p class="card-text text-center w-100  p-3 m-0" style="height:70%" >{{movie.content}} </p>
								<div class="row d-flex p-3" style="height:10%">
									<p class="card-text text-left text-muted w-50 pl-4 h4">{{movie.genre}}</p>
									<p class="card-text text-right text-muted w-50 pr-4 h4">{{movie.duration}}</p>
								</div>
								
							</div>
							
						</div>
					</div>
				</div>
			</div>

            <div class="col-md-6 justify-content-center"  style="margin-top:4rem">
					<b><h3 style="color:white;">Leave comment</h3></b>
					<form method='post' class="w-100">
						<b><label  class="form-label" style="color:white;">Comment</label></b>
                        <textarea name='comment' class="form-control" rows="3"  style="background-color:#C0C0C0;"></textarea>
                         <input type="hidden" name="movieId" value={{movie.id}}>
						<button type="submit" class="btn btn-primary" style="margin-top:1rem;color:white;">Leave comment</button>
					</form>

					<p style="color:red">{{ errorMsg }}</p>

			</div>
            
             <div class="row">
            <h1 class="text-center w-100" style="color:white;"> ALL COMMENTS</h1>
        </div>

			{% for comment in comments %}

			<div class="row justify-content-center" style="margin-top:1rem;">
				<div class="col-sm-12">
					<div class="card text-white bg-dark ">
						<div class="card-header  ">
						<p style="margin:0">{{comment.customer.name}} : {{comment.comment}} </p>
						<p style="margin:0">{{comment.created}} </p>
						</div>
					</div>
				</div>
			</div>
			
			{% endfor %}
			

 
    </div>


{% endblock %}